{% extends "_layouts/site" %}

{% block main %}

<div class="grid-x grid-padding-x grid-padding-y">
  <div class="small-12 medium-12 cell text-center">
    <ul class="menu align-center">
    {% nav category in craft.categories.group('events') %}
      {% set entryCount = craft.entries.relatedTo(category).total() %}
      <li>
        <a href="{{ category.url }}">
          <h3>{{ category.title }}</h3>
          <h6 class="sans-regular">{{ entryCount }} Events</h6>
        </a>
      </li>
    {% endnav %}
    </ul>
  </div>
</div>

{% set entries = craft.entries.section('events').order('start') %}
<div class="grid-container">
  {% for entry in entries %}
    {% include "_includes/blocks/excerpt--event" %}
  {% endfor %}
</div>

{% endblock %}