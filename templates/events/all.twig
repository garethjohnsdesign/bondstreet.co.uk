{% extends "_layouts/site" %}

{% block main %}

<div class="grid-x grid-padding-x grid-padding-y">
  <div class="small-12 medium-12 cell">
    <ul class="menu align-center">

      <li class="padding-1">
        <a href="">
          <h3>All</h3>
          <h6 class="sans-regular">10 Events</h6>
        </a>
      </li>

      <li class="padding-1">
        <a href="">
          <h3>This Month</h3>
          <h6 class="sans-regular">10 Events</h6>
        </a>
      </li>

      <li class="padding-1">
        <a href="">
          <h3>Next Month</h3>
          <h6 class="sans-regular">10 Events</h6>
        </a>
      </li>

      <li class="padding-1">
        <a href="">
          <h3>After That</h3>
          <h6 class="sans-regular">10 Events</h6>
        </a>
      </li>

    </ul>
  </div>
</div>

{% set start = now|atom %}
{% set end = now|date_modify('+1 month')|atom %}

{% set entries = craft.entries.section('events')
    .eventStart (['and',  ">= #{start}", "<= #{end}"])
    .order('eventStart')
    .all() %}


<div class="grid-container">
  {% for entry in entries %}
    {% include "_includes/blocks/event" %}
  {% endfor %}
</div>

{% endblock %}