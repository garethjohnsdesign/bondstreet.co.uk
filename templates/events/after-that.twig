{% extends "_layouts/site" %}

{% block main %}

 <h3>{{entry.title}}</h3>

{% include "_includes/blocks/events--types" %}

{% set start = now|atom %}
{% set end = now|date_modify('+1 month')|atom %}

{% set entries = craft.entries.section('events')
    .eventStart (['and',  ">= #{start}", "<= #{end}"])
    .order('eventStart')
    .all() %}


<div class="grid-container">
  {% for entry in entries %}
    {% include "_includes/blocks/event" %}
  {% endfor %}
</div>

{% endblock %}