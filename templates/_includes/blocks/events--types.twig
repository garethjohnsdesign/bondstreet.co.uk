<div class="grid-x grid-padding-x grid-padding-y">
  <div class="small-12 medium-12 cell">
    <ul class="vertical medium-horizontal menu text-center medium-text-left align-center">

      <li class="padding-1">
        <a href="/events/">
          <h3>All</h3>
          {% set allEventsCount = craft.entries.section('events').count() %}
          <h6 class="sans-regular medium-gray">{{ allEventsCount }} Events</h6>
        </a>
      </li>

      <li class="padding-1">
        <a href="/events/this-month">
          <h3>This Month</h3>
          {% set thisMonthEventsCount = craft.entries.section('events')
              .eventStart (['and',  ">= #{now | date_modify('first day of this month') | atom}", "<= #{now | date_modify('last day of this month') | atom}"])
              .count() %}
          <h6 class="sans-regular medium-gray">{{ thisMonthEventsCount }} Events</h6>
        </a>
      </li>

      <li class="padding-1">
        <a href="/events/next-month">
          <h3>Next Month</h3>
          {% set nextMonthsEventsCount = craft.entries.section('events')
              .eventStart (['and',  "> #{now | date_modify('last day of this month') | atom}", "<= #{now | date_modify('last day of next month') | atom}"])
              .count() %}
          <h6 class="sans-regular medium-gray">{{ nextMonthsEventsCount }} Events</h6>
        </a>
      </li>

      <li class="padding-1">
        <a href="/events/after-that">
          <h3>After That</h3>
          {% set afterThatEventsCount = craft.entries.section('events')
              .eventStart (">= #{now | date_modify('last day of next month') | atom}"	)
              .count() %}
          <h6 class="sans-regular medium-gray">{{ afterThatEventsCount }} Events</h6>
        </a>
      </li>

    </ul>
  </div>
</div>
