{% extends "_layouts/site" %}

{% block main %}
<!-- Hero -->
<section class="site__hero">
<div class="grid-x">
  <div class="small-12 cell text-center">

    <div class="image--hero align-center-middle">

      <div class="grid-y height-100 align-center content">
        <div class="shrink cell text-center">
          <h1 class="white text-uppercase hero">Bond <br>Street</h1>
          <h4 class="sans-regular white">The home of luxury shopping in London</h4>
        </div>
      </div>

    </div>

  </div>
</div>
</section>
<!-- End Hero -->

<!-- Recent Articles -->
{% set entries = craft.entries
.section('articles')
.all() %}

{% if entries|length %}
<div class="grid-container">
  <div class="grid-x grid-padding-x grid-padding-y margin-top-2">
    <div class="small-12 cell text-center">
      <div class="small serif-bold text-uppercase letter-spacing--loose black">Recent Articles</div>
    </div>
  </div>

  <div class="grid-x grid-padding-x grid-padding-y small-up-1 medium-up-3 large-up-3">
    {% for entry in entries %}
      {% include "_includes/blocks/excerpt--article" %}
    {% endfor %}
  </div>
</div>
{% endif %}
<!-- End Recent Articles -->

<!-- Recent Events -->
{% set entries = craft.entries
.section('events')
.all() %}

{% if entries|length %}
<div class="grid-container">

  <div class="grid-x grid-padding-x grid-padding-y margin-top-2">
    <div class="small-12 cell text-center">
      <div class="small serif-bold text-uppercase letter-spacing--loose black">Recent Events</div>
    </div>
  </div>

  {% for entry in entries %}
    {% include "_includes/blocks/excerpt--event" %}
  {% endfor %}

</div>

{% endif %}
<!-- End Recent Events -->

{% endblock %}